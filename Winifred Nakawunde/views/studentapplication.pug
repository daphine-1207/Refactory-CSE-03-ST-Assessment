doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel='stylesheet' href='/bootstrap-5.3.3-dist/css/bootstrap.css')
  link(rel='stylesheet' href='/css/custom.css')
  title Techical Assessment
#student-form.main-container
  .logo-container
    img(src='/Assets/Images/1. Form on load.PNG' alt='logo')
  .form-container
    .student-form
      h1 STUDENT APPLICATION FORM
      form.row.g-3(action='/apply' method='POST')
        .col-md-6
          label.form-label(for='firstname') First Name
          input#firstname.form-control(type='text' name='firstname')
        .col-md-6
          label.form-label(for='lastname') Last Name
          input#lastname.form-control(type='text' name='lastname')
        .col-6
          label.form-label(for='course' name='course' ) Course
          select#course.form-select
            option(selected='') Choose...
            option Software Engineering with Javascrip
            option Software Engineering with Python
            option UI/UX Design
        .col-6
          label.form-label(for='entryscheme' name='entryscheme') Entry Scheme
          select#entryscheme.form-select
            option(selected='') Choose...
            option
        .col-md-6
          label.form-label(for='intake' name='intake') Intake
          select#intake.form-select
            option(selected='') Choose...
            option January intake
            option june intake
            option September intake
        .col-md-6
          label.form-label(for='scholarship' name='scholarship') Scholarship
          select#scholarship.form-select
            option(selected='') Choose...
            option Full scholarship
            option Half scholarship
            option None
        .col-md-12
          label.form-label(for='gender' ) Gender
          input#gender.form-control(type='text' name='gender')
        .col-md-6
          label.form-label(for='dateOfBirth') Date of Birth
          input#dateOfBirth.form-control(type='text' name='dateOfBirth')
        .col-md-6
          label.form-label(for='residence') Residence
          input#residence.form-control(type='text' name='residence')

        .col-12
         button.btn.btn-primary(type='submit') Submit
script(src='/js/form.js')
