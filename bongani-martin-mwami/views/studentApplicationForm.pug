doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Student&apos;s Application Form
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/style.css')
.card.mb-3(style='max-width: 0 auto;')
  .row.g-0
    .col-md-6
      img.img-fluid.rounded-start(src='/images/1. Form on load.PNG' alt='Form on load')
    .col-md-6
      .card-body
        h3(style='text-align: center;') STUDENT APPLICATION FORM  
        form#students(action='/registerStudent' method='POST' onsubmit='return validateForm()')
          .row.g-3
            .col
              label.form-label(for='firstName') First Name
              input#firstName.form-control(type='text' name='firstName')
            .col
              label.form-label(for='lastName') Last Name
              input#lastName.form-control(type='text' name='lastName')
          .row.g-3
            .col
              label.form-label(for='course') Course
              select#autoSizingSelect.form-select
                option(selected='') --Select--
                option(value='Software Engineering') Software Engineering
                option(value='Computer Science') Computer Science
            .col
              label.form-label(for='entryScheme') Entry Scheme
              select#autoSizingSelect.form-select
                option(selected='') --Select--
                option(value='JavaScript') JavaScript
                option(value='Python') Python
          .row.g-3
            .col
              label.form-label(for='intake') Intake
              select#autoSizingSelect.form-select
                option(selected='') --Select--
                option(value='July') July
                option(value='December') December
            .col
              label.form-label(for='scholarship') Sponsorship
              select#autoSizingSelect.form-select
                option(selected='') --Select--
                option(value='refactory') Refactory
                option(value='other') Other
          br
          .mb-3
            label.form-label(for='gender') Gender
            br
            .form-check.form-check-inline
              input#inlineRadioMale.form-check-input(type='radio' name='inlineRadioOptions' value='male')
              label.form-check-label(for='inlineRadioMale') Male
            .form-check.form-check-inline
              input#inlineRadioFemale.form-check-input(type='radio' name='inlineRadioOptions' value='female')
              label.form-check-label(for='inlineRadioFemale') Female
            .row.g-3
              .col
                label.form-label(for='dateOfBirth') Date Of Birth
                input#dob.form-control(type='date' name='dateOfBirth')
              .col
                label.form-label(for='residence') Residence
                input#residence.form-control(type='text' name='residence')
            button.btn.btn-primary(type='submit') SUBMIT
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js' integrity='sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz' crossorigin='anonymous')
script(src='/js/studentApplication.js')

